@page
@using FUMiniHotelManagement.Razor.Constant
@model FUMiniHotelManagement.Razor.Pages.BookingReservationPage.DeleteModel

@{
    ViewData["Title"] = "Delete Booking Reservation";
}

@{
    var role = HttpContext.Session.GetString("Role");
    if (role is null)
    {
        Response.Redirect("/Login");
        return;
    }

    if (role.Trim() != StaticUserRole.Admin.Trim())
    {
        Response.Redirect("/Unauthorize");
        return;
    }
}

<h1>Delete Booking Reservation</h1>

<h3>Are you sure you want to delete this reservation?</h3>
<div>
    <h4>Booking Reservation Details</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.BookingReservation.BookingDate)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.BookingReservation.BookingDate)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.BookingReservation.TotalPrice)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.BookingReservation.TotalPrice)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.BookingReservation.BookingStatus)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.BookingReservation.BookingStatus)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.BookingReservation.Customer)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.BookingReservation.Customer.EmailAddress)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="BookingReservation.BookingReservationId"/>
        <input type="submit" value="Delete" class="btn btn-danger"/>
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>