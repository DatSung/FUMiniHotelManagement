@page
@using FUMiniHotelManagement.Razor.Constant
@model FUMiniHotelManagement.Razor.Pages.RoomTypePage.DetailsModel

@{
ViewData["Title"] = "Room Type Details";
}

@{
var role = HttpContext.Session.GetString("Role");
if (role is null)
{
Response.Redirect("/Login");
return;
}
if (role.Trim() != StaticUserRole.Admin.Trim())
{
Response.Redirect("/Unauthorize");
return;
}
}

<h1>Room Type Details</h1>

<div>
    <h4>Room Type Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoomType.RoomTypeName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoomType.RoomTypeName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoomType.TypeDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoomType.TypeDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoomType.TypeNote)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoomType.TypeNote)
        </dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-page="./Edit" asp-route-id="@Model.RoomType?.RoomTypeId" class="btn btn-primary">Edit</a>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>
