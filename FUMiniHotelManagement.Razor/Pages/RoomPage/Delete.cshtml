@page
@using FUMiniHotelManagement.Razor.Constant
@model FUMiniHotelManagement.Razor.Pages.RoomPage.DeleteModel

@{
ViewData["Title"] = "Delete Room";
}

@{
var role = HttpContext.Session.GetString("Role");
if (role is null)
{
Response.Redirect("/Login");
return;
}
if (role.Trim() != StaticUserRole.Admin.Trim())
{
Response.Redirect("/Unauthorize");
return;
}
}

<h1>Delete Room</h1>

<h3>Are you sure you want to delete this room?</h3>
<div>
    <h4>Room Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.RoomInformation.RoomNumber)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.RoomInformation.RoomNumber)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.RoomInformation.RoomDetailDescription)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.RoomInformation.RoomDetailDescription)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.RoomInformation.RoomMaxCapacity)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.RoomInformation.RoomMaxCapacity)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.RoomInformation.RoomStatus)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.RoomInformation.RoomStatus)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.RoomInformation.RoomPricePerDay)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.RoomInformation.RoomPricePerDay)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.RoomInformation.RoomType)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.RoomInformation.RoomType.RoomTypeName)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="RoomInformation.RoomId" />
        <div class="mt-3">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
